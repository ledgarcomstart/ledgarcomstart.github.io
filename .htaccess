# Enable URL rewriting
RewriteEngine On

# Make sure the .htaccess file is being applied from the correct directory
RewriteBase /

# Hide .html extension from URLs
# Example: /about.html → /about
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^([^/]+)$ $1.html [L]

# Optional: Redirect requests that include .html to the clean version
# Example: /about.html → /about
RewriteCond %{THE_REQUEST} "\s/([^.]+)\.html[\s?]"
RewriteRule ^ %1 [R=301,L]
