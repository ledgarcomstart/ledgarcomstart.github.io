# Enable URL rewriting
RewriteEngine On
RewriteBase /

# --- Serve .html files without showing the extension ---
# If the requested path (e.g. /enus) isn't a directory,
# but a .html file with that name exists, serve it.
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^([^/]+)$ $1.html [L]

# --- Redirect .html URLs to clean ones ---
# e.g. /enus.html â†’ /enus
RewriteCond %{THE_REQUEST} "^[A-Z]{3,}\s([^.]+)\.html\s"
RewriteRule ^ %1 [R=301,L]

# --- Optional: force index.html to load on root ---
# (Normally Apache does this automatically)
DirectoryIndex index.html
